<form method="post" action="/reserve/sync/" id="avocado_diff_form">
    <input type="hidden" name="projectId" value="${projectId}">
    <input type="hidden" name="presetId" value="${presetId}">

    #if($output.existsOnlyBaseTables.size() > 0)

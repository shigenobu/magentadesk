                        <div class="avocado_diff_slide" id="avocado_diff_slide_${table.tableName}">
                            <pre>${table.baseDefinition}</pre>
                            <pre>${table.compareDefinition}</pre>
                        </div>
                    </li>
                #end
            </ul>
        </div>
    #end


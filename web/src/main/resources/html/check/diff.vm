    }
    input#avocado_diff_submit_each {
        display: inline-block;
        text-align: left;
        border: 2px solid gray;
        font-size: 14px;
        color: gray;
        background-color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 4px;
        transition: .4s;
        cursor: pointer;
    }
